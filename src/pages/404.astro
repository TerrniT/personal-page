---
import { getLocale, getLocalePath, t } from 'i18n:astro'

import Container from '@components/Container.astro'
import Link from '@components/Link.astro'

import ErrorLayout from '@layouts/ErrorLayout.astro'

import { SITE } from '@consts'

export const prerender = false

const title = t('404.title')
const description = t('404.description')
---

<ErrorLayout title={title} description={description}>
  <div class="relative flex h-screen w-full items-center justify-center bg-background">
    <Container>
      <div class="flex flex-col-reverse items-center justify-around md:flex-row">
        <div class="prose">
          <h1 class="text-uppercase w-fit rounded-md bg-primary/10 px-1 text-4xl text-primary/80">404</h1>

          <p class="my-4 text-3xl font-semibold text-foreground">{t('404.heading')}</p>
          <p class="mb-6 mt-2 text-xl font-light text-secondary-foreground">{t('404.paragraph')}</p>

          <Link href={getLocalePath('/')} aria-label={`${SITE.NAME} on Home`}> {t('404.back_to')} </Link>
        </div>
        <div class="relative flex size-72 items-center justify-center">
          <img src="/404_mockup.png" alt="404 mockup" />
        </div>
      </div>
    </Container>
  </div>
</ErrorLayout>
