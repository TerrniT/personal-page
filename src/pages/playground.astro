---
import PageLayout from '@layouts/PageLayout.astro'
---

<PageLayout title="Playground" description="Playground">
  <div class="bg-main mb-12 space-y-16">
    <div class="text-main-foreground text-4xl">Dark Theme</div>
    <section class="animate grid grid-cols-5 gap-4">
      <div class="flex flex-col items-center gap-y-2">
        <div class="bg-main size-12 rounded-lg border border-border p-4"></div>
        <div class="text-main-foreground text-center">Main Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="bg-main-foreground size-12 rounded-lg border border-border p-4"></div>
        <div class="text-main-foreground text-center">Main Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-primary p-4"></div>
        <div class="text-main-foreground text-center">Primary Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-primary-foreground p-4"></div>
        <div class="text-main-foreground text-center">Primary Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-secondary p-4"></div>
        <div class="text-main-foreground text-center">Secondary Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-secondary-foreground p-4"></div>
        <div class="text-main-foreground text-center">Secondary Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-destructive p-4"></div>
        <div class="text-main-foreground text-center">Destructive Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-destructive-foreground p-4"></div>
        <div class="text-main-foreground text-center">Destructive Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-muted p-4"></div>
        <div class="text-main-foreground text-center">Muted Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-muted-foreground p-4"></div>
        <div class="text-main-foreground text-center">Muted Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-accent p-4"></div>
        <div class="text-main-foreground text-center">Accent Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-accent-foreground p-4"></div>
        <div class="text-main-foreground text-center">Accent Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-popover p-4"></div>
        <div class="text-center text-popover-foreground">Popover Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-popover-foreground p-4"></div>
        <div class="text-center text-popover-foreground">Popover Foreground</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-card p-4"></div>
        <div class="text-center text-card-foreground">Card Background</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-card-foreground p-4"></div>
        <div class="text-center text-card-foreground">Card Foreground</div>
      </div>
    </section>

    <div class="text-main-foreground text-4xl">Opacity / Primary Background</div>
    <section class="animate grid grid-cols-5 gap-4">
      <div class="flex flex-col items-center gap-y-2">
        <div class="size-12 rounded-lg border border-border bg-primary p-4"></div>
        <div class="text-main-foreground text-center">100%</div>
      </div>
      <div class="flex flex-col items-center gap-y-2">
