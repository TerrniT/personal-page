---
import { useI18n } from '@lib/i18n'

interface Props {
  date: Date
}

const { date } = Astro.props

const { url } = Astro
const { t } = useI18n(url)
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(t('date_locale'), {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
    })
  }
</time>
