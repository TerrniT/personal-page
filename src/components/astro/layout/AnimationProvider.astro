<script is:inline>
  function onAnimate() {
    const animateElements = document.querySelectorAll('.animate')

    animateElements.forEach((element, index) => {
      setTimeout(() => {
        element.classList.add('show')
      }, index * 150)
    })
  }

  document.addEventListener('DOMContentLoaded', () => onAnimate())
  document.addEventListener('astro:after-swap', () => onAnimate())
</script>
