---
import type { CollectionEntry } from 'astro:content'
import Link from './Link.astro'

type Props = {
  item: CollectionEntry<'uses'>
}

const { item } = Astro.props
---

<li class="flex flex-wrap items-center gap-x-3">
  <span class="block size-1.5 rounded-full bg-primary"></span>
  <div class="flex flex-col gap-x-1 md:flex-row">
    <Link href={`/${item.collection}/${item.slug}`}>{item.data.title}</Link>
    <div class="flex gap-x-1">
      <span class="hidden text-muted-foreground md:block">~</span>
      <span class="text-muted-foreground">{item.data.description}</span>
    </div>
  </div>
</li>
