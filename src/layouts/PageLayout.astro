---
import { YandexMetrika } from 'astro-ym';

import { Head, Header, Footer, Sidebar, Container } from '@components/astro/layout'

import { SITE } from '@consts'

import { type Language, getLangFromUrl } from '@lib/i18n'

type Props = {
  title: string
  description: string
  author?: string
  image?: string
  lang?: Language
  isCustomTitle?: boolean
}

const { title, description, image, author, lang, isCustomTitle } = Astro.props

const htmlLang = lang ?? getLangFromUrl(Astro.url)
---

<!doctype html>
<html lang={htmlLang}>
  <head>
    <Head
      title={isCustomTitle ? title : `${title} | ${SITE.NAME}`}
      description={description}
      image={image}
      author={author}
    />
  </head>
  <body>
    <YandexMetrika
      clickmap={true}
      trackLinks={true}
      accurateTrackBounce={true}
      webvisor={true}
      lazy={true}
      timeout={2000}
      ecommerce="dataLayer"
      params={{ source: "astro" }}
      counterId={106701987}
    />
    <div class="relative flex w-full flex-col md:flex-row">
      <Header />
      <Sidebar />

      <Container>
        <slot />
        <Footer />
      </Container>
    </div>
  </body>
</html>
